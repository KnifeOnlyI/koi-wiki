<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0.0.2-article-article-category-create-structure" author="knife">
        <createTable tableName="article_article_category">
            <column name="id" type="bigint">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="article_id" type="bigint">
                <constraints unique="false"
                             nullable="true"
                             foreignKeyName="fk_article_article_id_article_id"
                             referencedTableName="article"
                             referencedColumnNames="id"/>
            </column>
            <column name="article_category_id" type="bigint">
                <constraints unique="false"
                             nullable="true"
                             foreignKeyName="fk_article_article_category_id_article_category_id"
                             referencedTableName="article_category"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

        <createSequence sequenceName="article_article_category_id_seq" incrementBy="1" minValue="1" startValue="1"/>

        <createIndex tableName="article_article_category" indexName="idx_article_article_category_article_id">
            <column name="article_id"/>
        </createIndex>
        <createIndex tableName="article_article_category" indexName="idx_article_article_category_article_category_id">
            <column name="article_category_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>