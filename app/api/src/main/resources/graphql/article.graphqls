type Article {
    id: ID!
    title: String!
    description: String!
    content: String!
    isArchived: Boolean!
    author: Author!
    categories: [ArticleCategory]
    createdAt: DateTime!
    lastUpdateAt: DateTime
    deletedAt: DateTime
}

type Author {
    id: ID!
    username: String
}

type PageArticle {
    content: [Article]
    number: Int
    totalPages: Int
    totalElements: Int
}

input ArticleSearchCriteria {
    page: Int
    pageSize: Int
    sort: String
    q: String
    authorId: String
    archived: Boolean
    deleted: Boolean
}

input CreateArticle {
    title: String!
    description: String!
    content: String!
    isArchived: Boolean!
    categories: [Int]
}

input UpdateArticle {
    id: Int!
    title: String!
    description: String!
    content: String!
    isArchived: Boolean!
    categories: [Int]
}